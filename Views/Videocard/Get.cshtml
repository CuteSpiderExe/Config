@model IEnumerable<Config.Repository.Models.Videocard>

@{
    ViewBag.Title = "Get";
}

<h2>Видеокарты</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gddr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Memory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Power)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.Raw("<img style='width:150px; height:130px;' src=\"data:image/jpeg;base64,"
                                 + Convert.ToBase64String(item.Image) + "\" />")
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VideoSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gddr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Memory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Power)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.IdVideocard }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.IdVideocard })
        </td>
    </tr>
}

</table>
