            @Html.DisplayFor(modelItem => item.CoreShast)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IdProcessor }) |
