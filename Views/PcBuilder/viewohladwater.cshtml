@model Config.Repository.Models.Builder

@{
    ViewBag.Title = "viewohladwater";
}

<h2>Водяная система охлаждения</h2>
<body>
<table class="table">
    <tr>
    </tr>
    @foreach (var ohladwater in Model.OhladWaters)
    {
        <tr>
            <th>


            </th>
            <th>
                Наименование
            </th>
            <th>
                Сокет
            </th>
            <th>
                Длина
            </th>
            <th>
                Теплоотвод
            </th>
            <th>
                Цена
            </th>
        </tr>
        <tr>
            <th>
                @Html.Raw("<img style='width:100px; height:70px;' src=\"data:image/jpeg;base64,"
                                     + Convert.ToBase64String(ohladwater.Image) + "\" />")
            </th>
            <td>
                @Html.DisplayFor(item => ohladwater.Name)
            </td>
            <td>
                @Html.DisplayFor(item => ohladwater.Socket)
            </td>
            <td>
                @Html.DisplayFor(item => ohladwater.Size)мм
            </td>
            <td>
                @Html.DisplayFor(item => ohladwater.Tdp)Вт
            </td>
            <td>
                @Html.DisplayFor(item => ohladwater.Cost)₽
            </td>
            <td>
                @using (Html.BeginForm("AddToBuildOhladWater", "PcBuilder"))
                {
                    <input width="1" name='id' value=@ohladwater.IdOhladWater , style="visibility: hidden; width: 2px" />
                    <input type="submit" class="btn btn-success" value="Добавить" />
                }
            </td>
        </tr>
    }

</table>
</body>