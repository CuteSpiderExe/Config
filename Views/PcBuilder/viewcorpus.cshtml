@model Config.Repository.Models.Builder

@{
    ViewBag.Title = "viewcorpus";
}

<h2>Корпуса</h2>
<body>
    <table class="table" align="center" border="1" cellspacing="0" cellpadding="12" width="200">
        <tr>
        </tr>
        @foreach (var corpus in Model.Corpus)
        {
            <tr>
                <th>


                </th>
                <th>
                    Наименование
                </th>
                <th>
                    Размер материнской платы
                </th>
                <th>
                    Максимальная длина видеокарты
                </th>
                <th>
                    Размер блока питания
                </th>
                <th>
                    Максиммальная высота куллера процессора
                </th>
                <th>
                    Максимальный размер водяного охлаждения
                </th>
                <th>
                    Кол-во SATA
                </th>
                <th>
                    Цена
                </th>
            </tr>
            <tr>
                <td>
                    @Html.Raw("<img style='width:100px; height:70px;' src=\"data:image/jpeg;base64,"
                                         + Convert.ToBase64String(corpus.Image) + "\" />")
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.Name)
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.MotherSize)
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.VideoSize)мм
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.PowerBlockSize)
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.CpuFunSize)мм
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.CpuWaterSize)мм
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.SataKol)
                </td>
                <td>
                    @Html.DisplayFor(item => corpus.Cost)₽
                </td>
                <td>
                    @using (Html.BeginForm("AddToBuildCorpus", "PcBuilder"))
                    {
                        <input width="1" name='id' value=@corpus.IdCorpus , style="visibility: hidden; width: 2px" />
                        <input type="submit" class="btn btn-success" value="Добавить" />
                    }

                </td>
            </tr>

        }

    </table>
</body>